@#!/bin/sh
# $Id: catnv,v 1.1 2008-10-01 14:50:48-07 - - $
#
# NAME
#    catnv - generate report from submitted files
#
# SYNOPSIS
#    catnv [file...]
#
# DESCRIPTION
#    Cat multiple files with line numbers into a single file
#    for briefly reporting sample code.
#

ls -goa $*

for file in $*
do
   echo ""
   echo ================================================================
   echo File: $file
   echo ----------------------------------------------------------------
   cat -nv $file | expand 
   echo ================================================================
   echo ""
done
@


